export CARGO ?= $(HOME)/.cargo/bin/cargo
export RM ?= rm -rf

#=======================================================================================================================
# Switches
#=======================================================================================================================

# Set build mode.
ifneq ($(DEBUG),yes)
export BUILD = release
else
export BUILD = dev
endif

# Set build flags.
export FLAGS += --profile $(BUILD)
